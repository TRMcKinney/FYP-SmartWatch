<ScreenOne>:
    Button:
        text: app.clockLabel.text
        on_press: root.manager.current = 'screen2'
        background_normal: ''
        background_color: 0, 0, 0, 0

<ScreenTwo>:
#to get multiple scrollviews use boxlayout and set the orientation to horizontal to get them side by side
    ScrollView:
        # size: self.size <<<< not needed
        GridLayout:
            orientation: 'vertical'
            # pos: 200, 0 <<< pos isn't really needed as
            # there aren't multiple children.
            size_hint_y: None
            cols: 1
            spacing: dp(20)

            # Padding can be used to center the buttons in a gridlayout.
            # Set the horizontal padding to whatever you want to 'push' in
            # from both sides.
            padding: dp(50), dp(0) # horizontal, vertical

            # Below sets the height of all the children
            # dp() calculates pixel density so looks the same
            # regardless of display.
            row_default_height: dp(30)

            height: self.minimum_height
            Button:
                text: "Music Player"
                on_press: root.manager.current = 'screen3'

                # If you want to set a size first you need to set a
                # size_hint to 'None'. Seeing as we've already set the height
                # for all of the buttons above we can just set the width.

                # size: 40, 200 <<< not needed

                # Comment out 'size_hint_x' and 'width' above to make this button match the rest.

                # Below would center the widget if it was a boxlayout, you can't
                # do it in a gridlayout however you can use padding defined above.
                # pos_hint: {'center_x': 0.5}
            Button:
                text: "App 1"
            Button:
                text: "Bluetooth"
                on_press: root.manager.current = 'Bluetooth'
            Button:
                text: "App 3"
            Button:
                text: "App 4"
            Button:
                text: "Sensors"
                on_press: root.manager.current = 'Sensors'
            Button:
                text: "App 6"
            Button:
                text: "App 7"
            Button:
                text: "App 8"
            Button:
                text: "On SCREEN 2 >> Go to Screen 1"
                on_press: root.manager.current = 'screen1'


